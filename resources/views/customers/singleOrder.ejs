<section class="status bg-black text-white py-5">
    <div class="container">

        <div class="status-box mx-auto">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h1 class="fw-bold">Track Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-pill px-4 text-success"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>

            <ul>
                <li class="status-line pb-5" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line pb-5"  data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status-line pb-5" data-status="prepared"><span>Preparation</span></li>
                <li class="status-line pb-5" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status-line" data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
        
    </div>
</section>